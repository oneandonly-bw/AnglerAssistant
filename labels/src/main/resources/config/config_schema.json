{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Angler Assistant Configuration Schema",
  "type": "object",
  "required": ["general", "site", "runtime", "labeler", "forums"],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "forumTypes": {
          "type": "array",
          "items": { "type": "string", "enum": ["PHPBB", "VBULLETIN"] }
        },
        "filterTypes": {
          "type": "array",
          "items": { "type": "string", "enum": ["SECTION", "TOPIC"] }
        },
        "languages": {
          "type": "array",
          "items": { "type": "string", "enum": ["RU", "EN", "HE"] }
        }
      }
    },
    "general": {
      "type": "object",
      "required": ["loggingLevel"],
      "properties": {
        "loggingLevel": {
          "type": "string",
          "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR"]
        }
      }
    },
    "site": {
      "type": "object",
      "required": ["siteId", "name", "baseUrl"],
      "properties": {
        "siteId": { "type": "string" },
        "name": { "type": "string" },
        "baseUrl": { "type": "string", "format": "uri" },
        "httpTimeout": { "type": "integer", "minimum": 1000 },
        "httpUserAgent": { "type": "string" }
      }
    },
    "runtime": {
      "type": "object",
      "required": ["memoryThreshold", "maxRetries"],
      "properties": {
        "memoryThreshold": { "type": "number", "minimum": 0.1, "maximum": 1.0 },
        "maxRetries": { "type": "integer", "minimum": 0, "maximum": 10 }
      }
    },
    "labeler": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "minSentenceLength": { "type": "integer", "minimum": 1 },
        "maxSentenceLengthForContext": { "type": "integer", "minimum": 50 },
        "minLanguageRatio": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "maxSpecialCharRatio": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "dictionaryPaths": {
          "type": "array",
          "items": { "type": "string" }
        },
        "outputDirectory": { "type": "string" },
        "outputFileName": { "type": "string" },
        "maxSentences": { "type": "integer", "minimum": 0 }
      }
    },
    "forums": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url", "forumName", "path", "enabled", "forumType", "language"],
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "forumName": { "type": "string" },
          "path": { "type": "string" },
          "enabled": { "type": "boolean" },
          "forumType": { "type": "string", "enum": ["PHPBB", "VBULLETIN"] },
          "language": { "type": "string", "enum": ["RU", "EN", "HE"] },
          "include": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string", "enum": ["SECTION", "TOPIC"] }
              }
            }
          },
          "exclude": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string", "enum": ["SECTION", "TOPIC"] }
              }
            }
          }
        }
      }
    }
  }
}
